@if (Exception != null) {
    <Error @key="@Exception" Title="@Title" Dismissed="@Dismissed">@Exception.Message</Error>
}

@code {
    [Parameter]
    public string Title { get; set; } = "Error!";
    [Parameter]
    public Exception? Exception { get; set; }
    [Parameter]
    public EventCallback Dismissed { get; set; }
}
