<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <RootNamespace>Samples.TodoApp.Host</RootNamespace>
    <AssemblyName>Samples.TodoApp.Host</AssemblyName>
    <ServerGarbageCollection>true</ServerGarbageCollection>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\UI\UI.csproj" />
    <ProjectReference Include="..\Services\Services.csproj" />
    <ProjectReference Include="..\ServiceDefaults\ServiceDefaults.csproj" />
  </ItemGroup>

  <!-- Fusion packages -->
  <ItemGroup>
    <ProjectReference Include="..\..\..\src\ActualLab.Fusion.EntityFramework.Redis\ActualLab.Fusion.EntityFramework.Redis.csproj" />
    <ProjectReference Include="..\..\..\src\ActualLab.Fusion.EntityFramework.Npgsql\ActualLab.Fusion.EntityFramework.Npgsql.csproj" />
  </ItemGroup>

  <!-- Other packages -->
  <ItemGroup Condition="'$(TargetFramework)' == 'net10.0'">
    <PackageReference Include="AspNet.Security.OAuth.GitHub" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.Google" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.MicrosoftAccount" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.Server" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" />
    <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'net9.0'">
    <PackageReference Include="AspNet.Security.OAuth.GitHub" VersionOverride="$(AspNetCoreVersion9)" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.Cookies" VersionOverride="$(AspNetCoreVersion9)" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.Google" VersionOverride="$(AspNetCoreVersion9)" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.MicrosoftAccount" VersionOverride="$(AspNetCoreVersion9)" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.Server" VersionOverride="$(BlazorVersion9)" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" VersionOverride="$(AspNetCoreVersion9)" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" VersionOverride="$(EntityFrameworkCoreVersion9)" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" VersionOverride="$(EntityFrameworkCoreVersion9)" />
    <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" VersionOverride="$(EntityFrameworkCoreNpgsqlVersion9)" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
    <PackageReference Include="AspNet.Security.OAuth.GitHub" VersionOverride="$(AspNetCoreVersion8)" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.Cookies" VersionOverride="$(AspNetCoreVersion8)" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.Google" VersionOverride="$(AspNetCoreVersion8)" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.MicrosoftAccount" VersionOverride="$(AspNetCoreVersion8)" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.Server" VersionOverride="$(BlazorVersion8)" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" VersionOverride="$(AspNetCoreVersion8)" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" VersionOverride="$(EntityFrameworkCoreVersion8)" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" VersionOverride="$(EntityFrameworkCoreVersion8)" />
    <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" VersionOverride="$(EntityFrameworkCoreNpgsqlVersion8)" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'net7.0'">
    <PackageReference Include="AspNet.Security.OAuth.GitHub" VersionOverride="$(AspNetCoreVersion7)" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.Cookies" VersionOverride="$(AspNetCoreVersion7)" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.Google" VersionOverride="$(AspNetCoreVersion7)" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.MicrosoftAccount" VersionOverride="$(AspNetCoreVersion7)" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.Server" VersionOverride="$(BlazorVersion7)" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" VersionOverride="$(AspNetCoreVersion7)" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" VersionOverride="$(EntityFrameworkCoreVersion7)" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" VersionOverride="$(EntityFrameworkCoreVersion7)" />
    <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" VersionOverride="$(EntityFrameworkCoreNpgsqlVersion7)" />
  </ItemGroup>

  <ItemGroup>
    <None Include="$(ProjectDir)\Resources\**" CopyToOutputDirectory="PreserveNewest" CopyToPublishDirectory="PreserveNewest" LinkBase="Resources\" />
  </ItemGroup>

  <!-- TypeScriptUI build: produces wwwroot/js/todo-react.js -->
  <PropertyGroup>
    <TypeScriptUIDir>$([MSBuild]::NormalizePath($(MSBuildProjectDirectory), '..', 'TypeScriptUI'))</TypeScriptUIDir>
    <TypeScriptLibSourceDir>$([MSBuild]::NormalizePath($(MSBuildProjectDirectory), '..', '..', '..', 'ts'))</TypeScriptLibSourceDir>
    <TodoReactJsOutput>$([MSBuild]::NormalizePath($(MSBuildProjectDirectory), 'wwwroot', 'js', 'todo-react.js'))</TodoReactJsOutput>
  </PropertyGroup>

  <ItemGroup>
    <TypeScriptUISource Include="$(TypeScriptUIDir)/src/**/*" />
    <TypeScriptUISource Include="$(TypeScriptUIDir)/package.json" />
    <TypeScriptUISource Include="$(TypeScriptUIDir)/tsconfig.json" />
    <TypeScriptUISource Include="$(TypeScriptUIDir)/build.mjs" />
    <TypeScriptLibSource Include="$(TypeScriptLibSourceDir)/packages/*/src/**/*" />
    <TypeScriptLibSource Include="$(TypeScriptLibSourceDir)/package.json" />
  </ItemGroup>

  <Target Name="BuildTypeScriptLibSource" BeforeTargets="BeforeBuild"
          Inputs="@(TypeScriptLibSource)" Outputs="$(TypeScriptLibSourceDir)/packages/fusion-react/dist/index.js">
    <Exec Command="npm install --ignore-scripts" WorkingDirectory="$(TypeScriptLibSourceDir)" />
    <Exec Command="npm run build" WorkingDirectory="$(TypeScriptLibSourceDir)" />
  </Target>

  <Target Name="BuildTypeScriptUI" BeforeTargets="BeforeBuild" DependsOnTargets="BuildTypeScriptLibSource"
          Inputs="@(TypeScriptUISource)" Outputs="$(TodoReactJsOutput)">
    <Exec Command="npm install" WorkingDirectory="$(TypeScriptUIDir)" />
    <Exec Command="npm run build" WorkingDirectory="$(TypeScriptUIDir)" />
  </Target>

</Project>
