{
  "$schema": "NerdBank.GitVersioning/version.schema.json",
  "version": "0.2",
  "assemblyVersion": {
    "precision": "revision"
  },
  "publicReleaseRefSpec": [
    "^refs/heads/master$" // we release out of master
  ],
  "cloudBuild": {
    "setVersionVariables": true,
    "setAllVariables": true,
    "buildNumber": {
      "enabled": true
    }
  }
}