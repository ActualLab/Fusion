<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <PackageTags>servicetitan stl fusion server</PackageTags>
    <Description>
      Server-side components of Stl.Fusion -
      a Knockout.js-style computed/observable abstraction
      designed to power distributed apps: immutable, thread-safe, and
      capable of providing its observable replicas to remote clients.
    </Description>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Stl.Fusion\Stl.Fusion.csproj" />
